{
  "name": "projectmirror-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "expo": "~52.0.25",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.9",
    "react-native-reanimated": "~3.16.1"
  },
  "overrides": {
    "react-native-reanimated": "~3.16.1"
  },
  "scripts": {
    "cole": "cd apps/cole && npm start",
    "companion": "cd apps/companion && npm start",
    "build:cole": "cd apps/cole && eas build --profile development --platform ios",
    "build:companion": "cd apps/companion && eas build --profile development --platform ios",
    "build:all": "npm run build:cole && npm run build:companion"
  },
  "dependencies": {
    "expo": "52",
    "expo-av": "~15.0.2",
    "expo-build-properties": "~0.13.3"
  }
}
