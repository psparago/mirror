{
  "name": "projectmirror-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "cole": "cd apps/cole && npx expo start -c --dev-client",
    "companion": "cd apps/companion && npx expo start -c --dev-client --port 8082",
    "build:cole": "cd apps/cole && eas build --profile development --platform ios",
    "build:companion": "cd apps/companion && eas build --profile development --platform ios"
  },
  "devDependencies": {
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "@react-navigation/bottom-tabs": "6.5.20",
    "@react-navigation/native": "6.1.17",
    "@react-navigation/native-stack": "6.9.26",
    "expo-router": "3.5.23"
  }
}
