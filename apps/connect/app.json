{
  "expo": {
    "name": "Reflections Connect V2",
    "slug": "reflections-connect",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-companion.png",
    "scheme": "reflections-connect",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "locales": {
      "en": "./assets/locales/en.json"
    },
    "splash": {
      "image": "./assets/images/splash-lgc.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.psparago.reflections.connect",
      "buildNumber": "16",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleName": "Reflections Connect V2",
        "CFBundleAllowMixedLocalizations": true,
        "NSMicrophoneUsageDescription": "Allow access to the microphone to record audio for your Reflections.",
        "NSCameraUsageDescription": "Allow access to the camera to record video Reflections.",
        "NSPhotoLibraryUsageDescription": "Allow access to your photo library to save or upload videos for your Reflections."
      }
    },
    "config": {
      "usesNonExemptEncryption": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.psparago.reflections.connect",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "@react-native-google-signin/google-signin",
      "expo-apple-authentication",
      "expo-router",
      "expo-notifications",
      "expo-dev-client",
      "@react-native-community/datetimepicker",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Reflection Companion to access your camera to send video responses.",
          "microphonePermission": "Allow Reflection Companion to access your microphone for video and audio features."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Reflection Companion to access your photos."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "buildReactNativeFromSource": true,
            "useFrameworks": "static"
          }
        }
      ],
      "react-native-compressor",
      "expo-video",
      "expo-av",
      "expo-audio",
      [
        "@sentry/react-native",
        {
          "organization": "angelwareorg",
          "project": "reflections-connect"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a5df7b12-c69e-4969-9d15-a9348dd6cf97"
      }
    },
    "owner": "psparago",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/a5df7b12-c69e-4969-9d15-a9348dd6cf97"
    }
  }
}