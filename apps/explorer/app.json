{
  "expo": {
    "name": "Explorer",
    "slug": "reflections-explorer",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-explorer.png",
    "scheme": "reflections-explorer",
    "newArchEnabled": false,
    "backgroundColor": "#ffffff",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-lg.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.psparago.reflections.explorer",
      "buildNumber": "9",
      "googleServicesFile": "./GoogleService-Info.plist",
      "icon": "./assets/images/icon-explorer.png",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.psparago.reflections.explorer",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "@react-native-google-signin/google-signin",
      "expo-apple-authentication",
      "expo-router",
      "expo-notifications",
      "expo-dev-client",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Reflection Explorer to see you.",
          "microphonePermission": "Allow Reflection Explorer to hear you."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "buildReactNativeFromSource": true,
            "useFrameworks": "static"
          }
        }
      ],
      "expo-video",
      "expo-av",
      "expo-audio",
      [
        "@sentry/react-native",
        {
          "organization": "angelwareorg",
          "project": "reflections-explorer"
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a88d567c-d40a-44ab-9957-fd529f0b8a29"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {      
      "url": "https://u.expo.dev/a88d567c-d40a-44ab-9957-fd529f0b8a29"
    },
    "owner": "psparago"
  }
}
