rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to signals collection for testing
    match /signals/{signalId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to reflection_responses collection
    match /reflection_responses/{responseId} {
      allow read, write: if true;
    }
  }
}

